top-deco, bottom-deco {
	expand: false;
    padding: 17px;
    background-color: rgb(72,141,237);
    background-image: linear-gradient(to bottom, #1D65D2, #488DED);
}

top-deco{
    children: [textbox-top-label];
}
textbox-top-label{
    str: "Administrator";
    padding: 0 0 0 8px;
    background-color: #00000000;
    expand: false;
    font: "Terminus bold 12";
    text-color: white;
}

bottom-deco {
    orientation: horizontal;
    children: [log-off, power-off];
    padding: 13px;
}

power-off, log-off{
    orientation: horizontal;
}

log-off {
    children: [icon-log-off, textbox-log-off];
}

power-off {
    children: [icon-power-off, textbox-power-off];
}

log-off, power-off, icon-power-off, icon-log-off, textbox-power-off, textbox-log-off {
    background-color: #00000000;
    expand: false;
    font: "Terminus 12";
}

icon-log-off, icon-power-off{
    size: 1.4em;
}

textbox-log-off, textbox-power-off{
    padding: 6px 0 0 3px;
    text-color: white;
}

icon-log-off{
    margin: 0 0 0 145px;
    filename: "~/documents/arch/win_xp/icons/log_off.ico";
}
textbox-log-off{
    str: "Log Off";
}

icon-power-off{
    margin: 0 0 0 25px;
    filename: "~/documents/arch/win_xp/icons/BAD_power_off.png";
}
textbox-power-off{
    str: "Power Off Computer";
}


delim-left {
    expand: false;
    background-image: linear-gradient(to right, #FFFFFF, #EAEAE8, #EAEAE8, #FFFFFF);
    background-color: black;
    padding: 1px 0 0 0;
    margin: 2px 0 2px 20px;
}

delim-right {
    expand: false;
    background-image: linear-gradient(to right, #D3E5FB, #BFD5E6, #BFD5E6, #D3E5FB);
    padding: 1px 0 0 0;
    margin: 2px 0 3px 0;
}


listview {
    padding: 5px 0 0 15px;
	spacing: 0.13em;
	dynamic: false;
	cycle:   true;
    background-color: #FFFFFF;
    font:   "Terminus 14";
}

element {
    padding: 4px;
    children: [ element-icon, element-text ];
    background-color: #00000000;
}
element-text {
    background-color: #00000000;
    font: "Terminus 12";
    padding: 8px 0 0 3px;
	text-color: #000000;
}

element-text selected.normal{
	text-color: white;
}
element-icon {
    background-color: #00000000;
    size: 1.7em;
}

entry {
    enabled: false;
}

element selected.normal {
	text-color: white;
    background-color: #316AC5;
	border: 1px 1px solid 1px 1px;
	border-color: #5082CF;
}


inputbar {
    enabled: false;
}
