* {
	background-color: #080808;
	text-color: #000000;

	line-margin: 2;
	line-padding: 2;
	separator-style: "none";
	hide-scrollbar: "false";
	margin: 0;
	padding: 0;
}

window {
	location: west;
	anchor:	west;
    margin: 40% 0 0 0;
	height:	90%;
	width: 24%;
	orientation: vertical;
	children: [top-deco, mainbox, inputbar, bottom-deco];
    background-color: #5285C4;

	border: 1px 1px solid 1px 1px;
    border-color: #5285C4;
    border-radius: 9px 9px 0px 0px;
}

mainbox {
    padding: 0;
	children: [ left-half, right-half ];
    orientation: horizontal;

    lines: 2;
    columns: 2;
    spacing: 1em;
    fixed-columns: true;
    background-color: #FFFFFF;

	border: 0 3px solid 0 2px;
	border-color: #1D65D2;
    border-radius: 1px;
}

left-half{
	children: [ listview, delim-left, more ];
    background-color: yellow;
    background-color: #00000000;
}
more{
    expand: false;
    background-color: #00000000;
    children: [ textbox-more, icon-more ];
    orientation: horizontal;
    padding: 7px 0 10px 25px;
}

textbox-more{
    expand: false;
    margin:	2px 4px 0px 15px;
    font: "Terminus bold 12";
    background-color: #00000000;
    text-color: black;
    str: "All Programs";
}
icon-more{
    background-color: #00000000;
    padding: 0 0 0 0;
    expand: false;
    size: 1.1em;
    filename: "~/documents/arch/win_xp/icons/more_green_tri.ico";
}

right-half{
    padding: 0;
    width: 230px;
    padding: 15px;
    expand: false;
	cycle: true;
    orientation: vertical;
    children: [ docs, pics, musc, vids, comp, delim-right, cpanel, appearence, net-set, print, delim-right, info, find ];
    background-color: #D3E5FB;
	border: 0 0 solid 0 2px;
	border-color: #BED4ED;

}

docs, pics, musc, comp, info, net-set, vids, find, print, appearence, cpanel{
    padding: 7px 0 6px 0;
    background-color: #00000000;
    orientation: horizontal;
	expand: false;
}
docs{
    padding: 0;
    children: [icon-docs,textbox-docs];
}
pics{
    children: [icon-pics,textbox-pics];
}
musc{
    children: [icon-musc,textbox-musc];
}
comp{
    children: [icon-comp,textbox-comp];
}
vids{
    children: [icon-vids,textbox-vids];
}
net-set{
    children: [icon-net-set,textbox-net-set];
}
tasks{
    children: [icon-tasks,textbox-tasks];
}
find{
    children: [icon-find,textbox-find];
}
appearence{
    children: [icon-appearence,textbox-appearence];
}
info{
    children: [icon-info,textbox-info];
}
cpanel{
    children: [icon-cpanel,textbox-cpanel];
}
print{
    children: [icon-print,textbox-print];
}

textbox-docs, textbox-pics, textbox-musc, textbox-comp, textbox-info, textbox-vids, textbox-net-set, textbox-find, textbox-tasks, textbox-appearence, textbox-cpanel, textbox-print{
    expand: false;
    margin: 0px 4px 0px 15px;
    font: "Terminus 12";
    background-color: #00000000;
    text-color: black;
}

textbox-docs, textbox-pics, textbox-musc, textbox-comp, textbox-vids{
    font: "Terminus bold 12";
}

icon-docs, icon-pics, icon-musc, icon-comp, icon-info, icon-vids, icon-net-set, icon-find, icon-tasks, icon-appearence, icon-cpanel, icon-print{
    background-color: #00000000;
    padding: 0px;
    expand: false;
    size: 1.1em;
}

textbox-docs{
    str: "My Documents";
}
icon-docs{
    filename: "~/documents/arch/win_xp/icons/my_documents.ico";
}

textbox-pics{
    str: "My Pictures";
}
icon-pics{
    filename: "~/documents/arch/win_xp/icons/my_pics.ico";
}

textbox-musc{
    str: "My Music";
}
icon-musc{
    filename: "~/documents/arch/win_xp/icons/my_music.ico";
}

textbox-comp{
    str: "My Computer";
}
icon-comp{
    filename: "~/documents/arch/win_xp/icons/my_computer.ico";
}

textbox-vids{
    str: "My Videos";
}
icon-vids{
    filename: "~/documents/arch/win_xp/icons/my_vids.ico";
}

textbox-find{
    str: "Search";
}
icon-find{
    filename: "~/documents/arch/win_xp/icons/find.ico";
}

textbox-info{
    str: "Help and Support";
}
icon-info{
    filename: "~/documents/arch/win_xp/icons/info.ico";
}

textbox-net-set{
    str: "Network Settings";
}
icon-net-set{
